From: Boyuan Yang <byang@debian.org>
Date: Sat, 4 Jan 2020 22:13:06 -0500
Subject: configure.in: Properly use AC_DEFINE

---
 configure.in | 16 +++++++++-------
 1 file changed, 9 insertions(+), 7 deletions(-)

diff --git a/configure.in b/configure.in
index 5176442..a673d0e 100644
--- a/configure.in
+++ b/configure.in
@@ -22,18 +22,20 @@ TERMFILE="term.c"
 GRAPHICSOFILE=" xgraphics.o "
 GRAPHICSFILE=" xgraphics.c "
 
+# Debian-specific: Pre-define SIGRET as "return 0;"
+AC_DEFINE([SIGRET], [return 0;], [Pre-define SIGRET macro.])
 
 AC_MSG_CHECKING([wxWidgets version])
 if wxversion=`$WXCONFIG --version`; then
     AC_MSG_RESULT([$wxversion])
-    AC_DEFINE(HAVE_WX)
+    AC_DEFINE([HAVE_WX], [], [Have wxWidgets library])
     WXOFILES="wxMain.o wxTerminal.o wxTurtleGraphics.o  TextEditor.o"
     WXSRCFILES="wxMain.cpp wxTerminal.cpp wxTurtleGraphics.cpp  TextEditor.cpp"
     LIBS="$LIBS "`$WXCONFIG --libs`;
     CC="`$WXCONFIG --cc`"
     CXX="`$WXCONFIG --cxx`"
-    CXXFLAGS="$CXXFLAGS -DHAVE_WX `$WXCONFIG --cxxflags`";
-    CFLAGS="$CFLAGS -DHAVE_WX "
+    CXXFLAGS="$CXXFLAGS `$WXCONFIG --cxxflags`";
+#    CFLAGS="$CFLAGS -DHAVE_WX "
     TERMOFILE="wxterm.o"
     TERMFILE="wxterm.c"
     GRAPHICSOFILE=""
@@ -54,18 +56,18 @@ AC_CHECK_LIB(bsd, signal)
 
 tcap=no
 AC_CHECK_LIB(termcap, tgetstr,
-	     AC_DEFINE(HAVE_LIBTERMCAP) LIBS="$LIBS -ltermcap" tcap=yes)
+	     AC_DEFINE([HAVE_LIBTERMCAP], [], [Have libtermcap support.]) LIBS="$LIBS -ltermcap" tcap=yes)
 if test $tcap = no; then
    AC_CHECK_LIB(termlib, tgetstr,
-		AC_DEFINE(HAVE_LIBTERMLIB) LIBS="$LIBS -ltermlib" tcap=yes)
+		AC_DEFINE([HAVE_LIBTERMLIB], [], [Have libtermlib support.]) LIBS="$LIBS -ltermlib" tcap=yes)
 fi
 if test $tcap = no; then
    AC_CHECK_LIB(curses, tgetstr,
-		AC_DEFINE(HAVE_LIBCURSES) LIBS="$LIBS -lcurses" tcap=yes)
+		AC_DEFINE([HAVE_LIBCURSES], [], [Have libcurses support.]) LIBS="$LIBS -lcurses" tcap=yes)
 fi
 if test $tcap = no; then
    AC_CHECK_LIB(ncurses, tgetstr,
-		AC_DEFINE(HAVE_LIBCURSES) LIBS="$LIBS -lncurses" tcap=yes)
+		AC_DEFINE([HAVE_LIBCURSES], [], [Have libcurses support.]) LIBS="$LIBS -lncurses" tcap=yes)
 fi
 
 dnl Checks for header files.
